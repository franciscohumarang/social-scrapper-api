# Social Scraper API Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Supabase Configuration
# =============================================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# Twitter Configuration
# =============================================================================
# Twitter API v1.1 credentials (for DM operations)
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret

# TwitterAPI.io service credentials (for search and DM operations)
TWITTER_API_IO_KEY=your_twitterapi_io_key
TWITTER_PROXY=your_proxy_url

# Twitter Bearer Token (for user lookup)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# =============================================================================
# Reddit Configuration
# =============================================================================
# Reddit API credentials (for search operations)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=your_reddit_user_agent

# Reddit account credentials (for DM operations)
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# =============================================================================
# Application Configuration
# =============================================================================
# Port for the application (default: 8000)
PORT=8000

# Python configuration
PYTHONUNBUFFERED=1
